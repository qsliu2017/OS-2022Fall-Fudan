{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "inode-test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/src/fs/test/build/inode_test",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "make fs test",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description": "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ]
    },
    {
      "name": "qemu-debug",
      "type": "gdb",
      "request": "attach",
      "executable": "${workspaceRoot}/build/src/kernel8.elf",
      "target": ":1234",
      "remote": true,
      "cwd": "${workspaceRoot}/src",
      "preLaunchTask": "Qemu: debug",
      "postDebugTask": "Qemu: kill",
      "stopAtEntry": true,
    }
  ]
}